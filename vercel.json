{
  "version": 2,
  "rewrites": [{ "source": "/(.*)", "destination": "/api/index.js" }],
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/health",
      "schedule": "*/10 * * * *"
    }
  ],
  "regions": ["dxb1", "bom1"],
  "env": {
    "NODE_ENV": "production"
  }
}
